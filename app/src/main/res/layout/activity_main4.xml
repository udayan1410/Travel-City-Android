<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/Whitecolor"
            android:fitsSystemWindows="true"
            >
            <ImageView
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:id="@+id/fullimage"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                app:popupTheme="@style/Theme.AppCompat.NoActionBar"
                app:layout_collapseMode="pin"
                />

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/heading"
                    android:padding="12dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/Black"
                    android:text="Shaniwarwada"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    />


                <TextView
                    android:layout_below="@+id/heading"
                    android:padding="12dp"
                    android:id="@+id/info"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="2.5"
                    android:layout_marginTop="12dp"
                    android:text="This line contains information abt shaniwarwa  dadahuguoerhgruogherwupogerhgurehgrehgehgewhueugeuwuutoeimrtvietioerwutcoiptu,erwitvuewipoctuevwimpoecgiuherwiupgheriupgheriuph[ewomhoeur,tioewrmtueworiputnerioptunmewiotuwiotcrwteruotc,htrewuorcthoeurmhogi erh gioerhiomerwguj ew i guerwimgerwiogerwigojerwgiojerm giojeri ogjewmriogjewr[tiopkctioerwpmipevrmj twiedioashd u\nasihd asiudhbahsioudh asidhmasi dhmasihmdiasoudhg masiodgm asiudhamsihud iuehwiuryewkurhewiureuiwryewiugfigf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginTop="20dp"
                    android:id="@+id/prev"
                    android:layout_alignParentLeft="true"
                    android:clickable="true"
                    android:src="@mipmap/ic_keyboard_arrow_left_black_24dp"
                    />

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="60dp"
                    android:src="@mipmap/ic_keyboard_arrow_right_black_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:src="@mipmap/ic_place_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="6dp"
        android:id="@+id/action_btn"
        app:pressedTranslationZ="10dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="@color/Redcolor"
        android:tint="@color/Whitecolor"
        />
</android.support.design.widget.CoordinatorLayout>
