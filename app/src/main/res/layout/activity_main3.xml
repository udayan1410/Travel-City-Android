<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/sv"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/welcomeimg"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:scaleType="centerCrop">

            </ImageView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <android.support.v4.view.ViewPager
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#000000"
                >
            </android.support.v4.view.ViewPager>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/places"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="9dp"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="Must Visit Places"/>
                <TextView
                    android:id="@+id/see_places"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="See All"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/see_places"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:id="@+id/recycler"
                android:orientation="horizontal"
                >
            </android.support.v7.widget.RecyclerView>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/food"
                    android:layout_marginLeft="9dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="Top Foods To Try"/>
                <TextView
                    android:id="@+id/see_food"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:id="@+id/recycler2"
                android:orientation="horizontal"
                >
            </android.support.v7.widget.RecyclerView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/shopping"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="20dp"
                    android:layout_marginLeft="9dp"
                    android:textColor="#000000"
                    android:text="Shopping"/>
                <TextView
                    android:id="@+id/see_shop"
                    android:fontFamily="sans-serif-smallcaps"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:id="@+id/recycler3"
                android:orientation="horizontal"
                >
            </android.support.v7.widget.RecyclerView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/hotel"
                    android:layout_marginLeft="9dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="Accomodation"/>
                <TextView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:textSize="18dp"
                    android:id="@+id/see_hotel"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView

                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:id="@+id/recycler4"
                android:orientation="horizontal"
                >
            </android.support.v7.widget.RecyclerView>


            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/transport"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="20dp"
                    android:layout_marginLeft="9dp"
                    android:textColor="#000000"
                    android:text="Transport"/>
                <TextView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/see_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:id="@+id/recycler5"
                android:orientation="horizontal"
                >
            </android.support.v7.widget.RecyclerView>


            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-1315104419551050/1819125896">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
