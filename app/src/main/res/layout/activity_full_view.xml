<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"

    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:foregroundTint="@color/Redcolor"
        android:id="@+id/sample"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:background="#f5f4f4"
        >

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/Redcolor"
       android:layout_margin="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/back_btn"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@mipmap/ic_keyboard_backspace_white_24dp"
                android:layout_weight="10"
                />

              <AutoCompleteTextView
                  android:layout_weight="1"
                  android:layout_marginLeft="4dp"
                  android:layout_marginRight="10dp"
                  android:foregroundTint="@color/Whitecolor"
                  android:textColorHint="#FFFFFF"
                  android:id="@+id/editText1"
                  android:hint="Search...."
                  android:textSize="15dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:ems="10"
                  android:imeOptions="actionSearch"
                  android:inputType="textAutoComplete"
                  android:nextFocusUp="@id/editText1"
                  android:nextFocusLeft="@id/editText1"
                  android:textColor="#FFFFFF"
            />

        </LinearLayout>

</android.support.v7.widget.CardView>

    </LinearLayout>

      <android.support.v7.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
        android:layout_marginTop="1dp"
          android:layout_margin="2dp"
        android:id="@+id/fullviewrecycler">
      </android.support.v7.widget.RecyclerView>


        </LinearLayout>
